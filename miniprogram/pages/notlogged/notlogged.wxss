.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  height: 100vh;
  background-color: #f8f8f8;
  padding: 30rpx;
}

.login-container {
  width: 100%;
  max-width: 600rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.text-center {
  text-align: center;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #888888;
  margin-bottom: 60rpx;
}

.login-button {
  width: 100%;
  margin-bottom: 30rpx;
}

.login-button .t-button__icon {
  margin-right: 8rpx;
  font-size: 36rpx;
}

.privacy-text {
  font-size: 24rpx;
  color: #999999;
  margin-top: 30rpx;
  line-height: 1.5;
}

.privacy-link {
  color: #0052d9;
  display: inline;
}

.mt-4 {
  margin-top: 16rpx;
}

.mt-2 {
  margin-top: 8rpx;
}

.text-xl {
  font-size: 36rpx;
}

.font-medium {
  font-weight: 500;
}

.text-gray-700 {
  color: #374151;
}

.text-gray-500 {
  color: #6b7280;
} 