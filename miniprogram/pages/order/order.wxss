/**order.wxss**/
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.status-bar {
  height: 88rpx;
  background-color: #transparent;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  position: relative;
  z-index: 10;
  border-bottom: 1px solid #f0f0f0;
}

.status-back {
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-title {
  font-weight: 500;
  font-size: 32rpx;
}

.order-content {
  flex: 1;
  height: calc(100vh - 180rpx);
  padding: 20rpx;
}

.delivery-time-cell {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
}

.order-items {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.item-info {
  flex: 1;
}

.item-name {
  font-weight: 500;
  margin-bottom: 6rpx;
}

.item-price-unit {
  font-size: 24rpx;
  color: #888;
}

.item-action {
  display: flex;
  align-items: center;
}

.item-total {
  color: #fa4126;
  font-weight: 500;
  margin-right: 24rpx;
}

.item-counter {
  display: flex;
  align-items: center;
}

.counter-number {
  margin: 0 16rpx;
  min-width: 24rpx;
  text-align: center;
}

.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}

.order-summary {
  padding-top: 10rpx;
}

.total-count {
  text-align: right;
  font-size: 24rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.total-price-container {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.total-label {
  font-weight: 500;
  margin-right: 12rpx;
}

.total-price {
  color: #fa4126;
  font-weight: 500;
  font-size: 36rpx;
}

.order-note {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.note-text {
  font-size: 24rpx;
  color: #888;
  margin-left: 16rpx;
}

.submit-bar {
  height: 100rpx;
  background-color: #fff;
  padding: 24rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
} 