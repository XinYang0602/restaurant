/* backend.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.status-bar {
  height: 88rpx;
  background-color: transparent;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  border-bottom: 1px solid #f0f0f0;
  background-color: transparent;
}

.status-title {
  font-weight: 500;
  font-size: 32rpx;
}

.tabs-container {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.table-container {
  padding: 20rpx;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.table-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.action-btn {
  min-width: 80rpx;
  padding: 0 16rpx;
}

.refresh-btn {
  margin-left: auto;
}

.table-header {
  display: flex;
  background-color: #f8f8f8;
  border-radius: 8rpx 8rpx 0 0;
  padding: 20rpx 0;
  font-weight: 500;
}

.table-body {
  max-height: calc(100vh - 400rpx);
}

.table-row {
  display: flex;
  border-bottom: 1px solid #f0f0f0;
  padding: 20rpx 0;
}

.table-row:hover {
  background-color: rgba(0, 82, 217, 0.05);
}

.cell {
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.checkbox-cell {
  width: 60rpx;
  justify-content: center;
}

.title-cell {
  width: 150rpx;
}

.kind-cell {
  width: 100rpx;
}

.desc-cell {
  flex: 1;
  max-width: 360rpx;
}

.price-cell {
  width: 100rpx;
  justify-content: flex-end;
}

.action-cell {
  width: 200rpx;
  justify-content: center;
}

.action-btns {
  display: flex;
  gap: 16rpx;
}

.view-btn {
  color: #0052d9;
  font-size: 26rpx;
}

.edit-btn {
  color: #ff9800;
  font-size: 26rpx;
}

.delete-btn {
  color: #fa4126;
  font-size: 26rpx;
}

.empty-data {
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
  margin-top: 16rpx;
}

.pagination {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1px solid #f0f0f0;
}

.pagination-info {
  font-size: 26rpx;
  color: #999;
}

.pagination-btns {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.page-info {
  font-size: 26rpx;
  color: #333;
}

/* 编辑对话框样式 */
.edit-dialog .t-dialog__content {
  padding: 0 !important;
}

.dialog-content {
  padding: 0;
}

.form-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f0f0f0;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.form-label.required:after {
  content: ' *';
  color: #fa4126;
}

.form-input {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #333;
  width: 100%;
  border: none;
  outline: none;
}

/* 对话框底部按钮 */
.edit-dialog .t-dialog__footer {
  display: flex;
}

.edit-dialog .t-dialog__footer .t-button {
  flex: 1;
  border-radius: 0;
} 