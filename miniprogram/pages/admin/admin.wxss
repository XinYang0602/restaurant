/**admin.wxss**/
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.status-bar {
  height: 88rpx;
  background-color: #transparent;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  border-bottom: 1px solid #f0f0f0;
}

.status-title {
  font-weight: 500;
  font-size: 32rpx;
}

.orders-container {
  padding: 20rpx;
  padding-bottom: 40rpx;
}

.order-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.order-id {
  font-weight: 500;
  font-size: 28rpx;
}

.order-items {
  margin-top: 16rpx;
  margin-bottom: 16rpx;
  padding-left: 20rpx;
  border-left: 2rpx solid #f0f0f0;
}

.order-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.item-info {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.item-count {
  margin-right: 12rpx;
}

.item-price {
  font-size: 26rpx;
  color: #333;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.order-total {
  font-weight: 500;
  font-size: 28rpx;
}

.total-price {
  color: #fa4126;
}

.complete-time {
  font-size: 24rpx;
  color: #999;
}

.empty-tip {
  padding: 80rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
  margin-top: 16rpx;
} 