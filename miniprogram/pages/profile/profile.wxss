/**profile.wxss**/
.content {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}

.status-bar {
  height: 88rpx;
  background-color: transparent;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  border-bottom: none;
}

.status-title {
  font-weight: 500;
  font-size: 32rpx;
}

/* 未登录状态样式 */
.not-logged-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 100rpx 30rpx;
  padding: 60rpx 30rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.text-center {
  text-align: center;
}

.mt-4 {
  margin-top: 16rpx;
}

.mt-2 {
  margin-top: 8rpx;
}

.text-xl {
  font-size: 36rpx;
}

.font-medium {
  font-weight: 500;
}

.text-gray-700 {
  color: #333;
}

.text-gray-500 {
  color: #666;
}

.login-button {
  margin-top: 40rpx;
  width: 80%;
}

/* 超级管理员入口样式 */
.super-admin-container {
  margin: 30rpx;
  padding: 10rpx;
  background-color: rgba(0, 82, 217, 0.08);
  border-radius: 12rpx;
  border: 1px dashed #0052d9;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: calc(100% - 60rpx);
}

/* 管理员按钮排列 */
.admin-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.admin-buttons t-button {
  flex: 1;
}

/* 已登录状态样式 */
.profile-card {
  margin: 30rpx;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: calc(100% - 60rpx);
}

.avatar {
  margin-right: 24rpx;
}

.profile-info {
  flex: 1;
}

.profile-name {
  font-weight: 500;
  font-size: 32rpx;
  margin-bottom: 6rpx;
}

.profile-welcome {
  font-size: 24rpx;
  color: #888;
}

.section-container {
  margin: 0 30rpx 30rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  width: calc(100% - 60rpx);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.section-title {
  font-weight: 500;
  font-size: 30rpx;
}

.section-more {
  display: flex;
  align-items: center;
}

.more-text {
  font-size: 24rpx;
  color: #0052d9;
  margin-right: 4rpx;
}

.order-item {
  padding: 0 10rpx;
}

.empty-tip {
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
  margin-top: 16rpx;
}

.logout-container {
  margin: 60rpx 30rpx;
  width: calc(100% - 60rpx);
}

/* 确保底部标签栏显示 */
.t-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  background-color: #ffffff;
} 